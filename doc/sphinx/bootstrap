#!/bin/sh

${AWK=awk} '
BEGIN {
    print "# generated by ./bootstrap" | "cat"
    print "IMG_PDF = \\" | "cat"
    close("cat")
}

sub(/^\.\..* image:: /, "") {
    basename = $0
    sub(/\.[^.]*$/, "", basename)
    dirname = FILENAME
    sub(/\/[^\/]*$/, "", dirname)
    input = dirname "/" basename ".svg"
    output = dirname "/" basename ".pdf"
    if (1 == getline < input)
	print output " \\" | "sort"
}

END {
    close("sort")
    print "" | "cat"
    close("cat")
}

' `find src -name '*.rst'` > img_pdf.mk && \
    echo >&2 img_pdf.mk
